<h1>Post List</h1>
<table class="table">
  <thead>
  <td>id</td>
  <td>title</td>
  <td>content</td>
  <td>user</td>
  <td>address</td>
  <td>action</td>
  </thead>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= post.address %></td>
      <td><%= post.user.email %></td>
      <td>
        <%= link_to 'Show', posts_path(post) %>
        <%= link_to 'Edit', edit_post_path(post)_ %>

      </td>
    </tr>
  <% end %>
</table>

<%= link_to 'New', new_post_path %>