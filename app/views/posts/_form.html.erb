
<div class="container">
  <div class="form-control">
    <% if @post.errors.any? %>
      <ul>
        <% @post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    <% end %>
<%= form_with model: @post do |form| %>
  <div class="mb-2">
    <%= form.label :category, style: "display: block" %>
    <%= form.select :category_ids, options_for_select(@categories.collect {|cat| [cat.name, cat.id]})  %>
  </div>
  <div class="mb-2">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="mb-2">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div class="mb-3">
    <%= form.label :address %>
    <%= form.text_field :address%>
  </div>

  <%= form.submit %>
<% end %>
  </div>
</div>